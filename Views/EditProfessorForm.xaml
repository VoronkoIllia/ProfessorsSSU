<Window x:Class="ProfessorsSSU.EditProfessorForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfessorsSSU"
        mc:Ignorable="d"
        Title="EditProfessorForm" Height="650" Width="685">
    <Grid>
        <Label Content="Дані про викладача" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="Прізвище" HorizontalAlignment="Left" Margin="60,166,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Right" Width="189"/>
        <Label Content="Кафедра" HorizontalAlignment="Left" Margin="60,214,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Right"  Width="189"/>
        <Label Content="Рік народження" HorizontalAlignment="Left" Margin="60,262,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Right"  Width="189"/>
        <Label Content="Рік працевлаштування" HorizontalAlignment="Left" Margin="60,310,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Right"  Width="189"/>
        <Label Content="Посада" HorizontalAlignment="Left" Margin="60,358,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Right"  Width="189"/>
        <Label Content="Науковий ступінь" HorizontalAlignment="Left" Margin="60,406,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Right"  Width="189"/>
        <Label Content="Вчене звання" HorizontalAlignment="Left" Margin="60,454,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Right"  Width="189"/>
        <TextBox x:Name="SurnameTextBox" BorderThickness="2" HorizontalAlignment="Left" Margin="285,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230" Height="27"/>
        <TextBox x:Name="DepartmentTextBox" BorderThickness="2" HorizontalAlignment="Left" Margin="285,218,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230" Height="27"/>
        <TextBox x:Name="BirthYearTextBox" BorderThickness="2" HorizontalAlignment="Left" Margin="285,266,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230" Height="27"/>
        <TextBox x:Name="EmploymentYearTextBox" BorderThickness="2" HorizontalAlignment="Left" Margin="285,314,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230" Height="27"/>
        <TextBox x:Name="PositionTextBox" BorderThickness="2" HorizontalAlignment="Left" Margin="285,362,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230" Height="27"/>
        <ComboBox x:Name="AcademicDegreeComboBox" IsEditable="True" Text="--- не обрано ---" IsReadOnly="True" HorizontalAlignment="Left" Margin="285,410,0,0" VerticalAlignment="Top" Width="230" Height="27"/>
        <ComboBox x:Name="AcademicRankComboBox" IsEditable="True" Text="--- не обрано ---" IsReadOnly="True" HorizontalAlignment="Left" Margin="285,458,0,0" VerticalAlignment="Top" Width="230" Height="27"/>
        <Button Content="ЗБЕРЕГТИ" HorizontalAlignment="Left" Margin="200,542,0,0" VerticalAlignment="Top" Width="100" Height="30" FontSize="16"/>
        <Button Content="СКАСУВАТИ" HorizontalAlignment="Left" Margin="320,542,0,0" VerticalAlignment="Top" Width="120" Height="30" FontSize="16"/>
    </Grid>
</Window>
