<Window x:Class="ProfessorsSSU.LogInForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfessorsSSU"
        mc:Ignorable="d"
        Title="LogInForm" Height="450" Width="550">
    <Grid >
        <Label Content="АВТОРИЗАЦІЯ" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="ЛОГІН" HorizontalAlignment="Left" Margin="88,164,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Label Content="ПАРОЛЬ" HorizontalAlignment="Left" Margin="88,217,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="LoginTextBox" BorderThickness="2" HorizontalAlignment="Center" Margin="44,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="230" Height="27"/>
        <PasswordBox x:Name="PasswordTextBox" BorderThickness="2" HorizontalAlignment="Center" Margin="44,221,0,0" VerticalAlignment="Top" Width="230" Height="27"/>

        <Button Content="ОК" HorizontalAlignment="Left" Margin="160,309,0,0" VerticalAlignment="Top" Width="60" Height="30" FontSize="16"/>
        <Button Content="СКАСУВАТИ" HorizontalAlignment="Left" Margin="259,309,0,0" VerticalAlignment="Top" Width="120" Height="30" FontSize="16"/>
    </Grid>
</Window>
